@page
@model Sunridge.Pages.LostAndFound.IndexModel
@{
    ViewData["Title"] = "Index";
}

    <div class="row">
        <div class="col-6">
            <h2 class="text-primary">Lost And Found</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-page="Upsert" class="btn btn-primary"><i class="fas fa-plus"></i>&nbsp;Create New</a>
        </div>
        @foreach (var item in Model.LostAndFoundItemList)
        {
            <div class="col-lg-3 col-xl-3 col-md-6 pb-4">
                <div class="card" border-radius:5px">
                    <img src="@item.Image" class="card-img-top p-2 rounded" />
                    <h3>@item.Description</h3>
                </div>
            </div>
        }
    </div>

