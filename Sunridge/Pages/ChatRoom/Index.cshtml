@page
@model Sunridge.Pages.ChatRoom.IndexModel
@using Sunridge.Utility
@{
    ViewData["Title"] = "Index";
}
@if (User.IsInRole(SD.OwnerRole) || User.IsInRole(SD.AdminRole))
{
    <form method="post" asp-action="Index" enctype="multipart/form-data">
        <div class="col-8 pt-3">
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="ChatRoomObj.Post"></label>
                </div>
                <div class="col-9">
                    <textarea class="form-control" asp-for="ChatRoomObj.Post" id="txtDescription" style="height:200px"></textarea>
                </div>
            </div>
            <div class="row">
                <div class="col-6">
                    <button type="submit" class="btn btn-primary form-control" onclick="return ValidInput()">Send</button>
                </div>
            </div>
        </div>
    </form>

    @foreach (var item in Model.ChatRoomModelList)
    {
        <div class="col-lg-3 col-xl-3 col-md-6 pb-4">
            <div class="card" border-radius:5px">
                <h3>@item.Post</h3>
            </div>
        </div>
    }
}



