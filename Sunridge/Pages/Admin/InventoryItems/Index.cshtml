@page
@model Sunridge.Pages.Admin.InventoryItems.IndexModel
@using Sunridge.Utility;

@{
    ViewData["Title"] = "Index";
}

@if (User.IsInRole(SD.AdminRole) || User.IsInRole(SD.OwnerRole))
{
    <div class="row pl-2">
        <div calss="col-md-3">
            <h2 class="pl-2 pt-2">Owners</h2>
        </div>
        <div class="col-md-7"></div>
        <div class="col-md-2 pb-3 pt-2">
            <a asp-page="/Admin/InventoryItems/Upsert" class="btn btn-primary">Create New Inventory Item</a>
        </div>
    </div>

    <div class="pl-2">
        <table id="DT_Load" class="table table-striped table-bordered display" style="width:100%; text-align:center;">
            <thead>
                <tr>
                    <th>Description</th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>

    @section Scripts {
        <script src="~/js/InventoryItems.js"></script>
    }
}
else
{
    <h1>You must be logged in to view this page.</h1>
}