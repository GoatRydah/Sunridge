@page
@model Sunridge.UpsertModel
@using Sunridge.Models;
@{
    ViewData["Title"] = "Upsert";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<form method="post" asp-action="Upsert" enctype="multipart/form-data">

    <div class="col-8 pt-3 pl-3">

        @*<input type="hidden" asp-for="OwnerObj.Id" />*@

        <div class="form-group row">
            <div class="col-3">
                <label asp-for="LotObj.LotNumber"></label>
            </div>
            <div class="col-9">
                <input class="form-control" asp-for="LotObj.LotNumber" id="txtLotNumber" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="LotObj.TaxId"></label>
            </div>
            <div class="col-9">
                <input class="form-control" asp-for="LotObj.TaxId" id="txtTaxId" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="AddressObj.StreetAddress"></label>
            </div>
            <div class="col-9">
                <input class="form-control" asp-for="AddressObj.StreetAddress" id="txtAddress" />
            </div>
        </div>
        <div class="row form-group">
            <div class="col-md-3">
                <label asp-for="PrimaryOwner.FullName"></label>
            </div>
            <div class="col-md-9">
                @Html.DropDownListFor(m => m.PrimaryOwner.FullName, Model.Owners, "- Please select an owner", new { @class = "form-control" })
                <span class="text-danger" asp-validation-for="PrimaryOwner.FullName"></span>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-md-3">
                <label asp-for="SecondaryOwner.FullName"></label>
            </div>
            <div class="col-md-9">
                @Html.DropDownListFor(m => m.SecondaryOwner.FullName, Model.Owners, "- Please select an owner", new { @class = "form-control" })
                <span class="text-danger" asp-validation-for="SecondaryOwner.FullName"></span>
            </div>
        </div>
        @foreach (Inventory item in Model.InventoryObj)
        {
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="@item.Description"></label>
                </div>
                <div class="col-9">
                    <input type="checkbox" class="form-control" asp-for="@item.Description" id="chkbxInventoryItem@(item.InventoryId)" />
                </div>
            </div>
        }
        <div class="row">
            <div class="col-md-6 mb-2">
                <button type="submit" class="btn btn-primary form-control">Update</button>
            </div>
            <div class="col-md-6">
                <a asp-page="./Index" type="submit" class="btn btn-success form-control">Back to List</a>
            </div>
        </div>
    </div>
</form>