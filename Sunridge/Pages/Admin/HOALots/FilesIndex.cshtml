@page
@model Sunridge.Pages.Admin.HOALots.FilesIndexModel
@{
    ViewData["Title"] = "FilesIndex";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

@if (Request.Query["id"].Count > 0)
{
    TempData["lotId"] = Request.Query["id"];
}
<div class="row pl-2">
    <div calss="col-md-3">
        <h2 class="pl-2 pt-2">Files for Lot @Model.LotObj.LotNumber</h2>
    </div>
    <div class="col-md-7"></div>
    <div class="col-md-2 pb-3 pt-2">
        <a href="/Admin/HOALots/FilesUpsert?lotId=@(Model.LotObj.LotId)" class="btn btn-primary">Upload Document</a>
    </div>
    <div class="col-md-2">
        <a href="/Admin/HOALots/Index" class="btn btn-primary">Back to Lots</a>
    </div>
</div>

<div class="pl-2">
    <table id="DT_Load" class="table table-striped table-bordered" style="width:100%; text-align:center;">
        <thead>
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th>File</th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts {
    <script src="~/js/LotFile.js"></script>
}