@page
@model Sunridge.Pages.Admin.HOALots.FilesIndexModel
@using Sunridge.Utility;

@{
    ViewData["Title"] = "FilesIndex";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

@if (User.IsInRole(SD.AdminRole) || User.IsInRole(SD.OwnerRole))
{
    @if (Request.Query["id"].Count > 0)
    {
        TempData["lotId"] = Request.Query["id"];
    }
    <div class="row pl-2">
        <div calss="col-md-3">
            <h2 class="pl-2 pt-2">Files for Lot @Model.LotObj.LotNumber</h2>
        </div>
        <div class="col-md-5"></div>
        <div class="col-md-4 ml-5 pb-3 pt-2">
            <a href="/Admin/HOALots/FilesUpsert?lotId=@(Model.LotObj.LotId)" class="btn btn-sm btn-primary">Upload Document</a>
            <a href="/Admin/HOALots/Index" class="btn btn-sm btn-primary">Back to Lots</a>
        </div>
    </div>

    <div class="pl-2">
        <table id="DT_Load" class="table table-striped table-bordered" style="width:100%; text-align:center;">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Description</th>
                    <th>File</th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>

    @section Scripts {
        <script src="~/js/LotFile.js"></script>
    }
}
else
{
    <h1>You must be logged in to view this page.</h1>
}