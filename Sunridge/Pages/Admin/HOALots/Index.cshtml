@model Sunridge.Pages.Admin.HOALots.IndexModel
@using Sunridge.Utility;

@{
    ViewData["Title"] = "Index";
}

@if (User.IsInRole(SD.AdminRole) || User.IsInRole(SD.OwnerRole))
{
    <div class="row pl-2">
        <h2 class="pl-2 pt-2">HOA Lots</h2>
    </div>

    <div class="pl-2">
        <table id="DT_Load" class="table table-striped table-bordered" style="width:100%; text-align:center;">
            <thead>
                <tr>
                    <th>Lot Number</th>
                    <th>Street Address</th>
                    <th>Owner(s)</th>
                    <th>Tax ID</th>
                    <th>Lot Inventory</th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>

    @section Scripts {
        <script src="~/js/HoaLots.js"></script>
    }
}
else
{
    <h1>You must be logged in to view this page.</h1>
}
