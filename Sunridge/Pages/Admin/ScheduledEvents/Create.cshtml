@model Sunridge.Pages.Admin.ScheduledEvents.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>ScheduledEvent</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ScheduledEventObj.Subject" class="control-label"></label>
                <input asp-for="ScheduledEventObj.Subject" class="form-control" />
                <span asp-validation-for="ScheduledEventObj.Subject" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ScheduledEventObj.Description" class="control-label"></label>
                <input asp-for="ScheduledEventObj.Description" class="form-control" />
                <span asp-validation-for="ScheduledEventObj.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ScheduledEventObj.Location" class="control-label"></label>
                <input asp-for="ScheduledEventObj.Location" class="form-control" />
                <span asp-validation-for="ScheduledEventObj.Location" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ScheduledEventObj.Image" class="control-label"></label>
                <input type="file" name="files" asp-for="ScheduledEventObj.Image" class="form-control" />
                <span asp-validation-for="ScheduledEventObj.Image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ScheduledEventObj.Start" class="control-label"></label>
                <input asp-for="ScheduledEventObj.Start" class="form-control" />
                <span asp-validation-for="ScheduledEventObj.Start" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ScheduledEventObj.End" class="control-label"></label>
                <input asp-for="ScheduledEventObj.End" class="form-control" />
                <span asp-validation-for="ScheduledEventObj.End" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="ScheduledEventObj.IsFullDay" /> @Html.DisplayNameFor(model => model.ScheduledEventObj.IsFullDay)
                </label>
            </div>
            @*<div class="form-group">
                <label asp-for="ScheduledEvent.Image"></label>
                <input type="file" name="files" asp-for="ScheduledEvent.Image" class="form-control" />
            </div>*@
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

