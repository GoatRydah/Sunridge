@page
@model Sunridge.Pages.Admin.ScheduledEvents.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Events Calendar</h1>

<div class="row">
    <div class="col-lg-3 col-md-6">
        <a asp-page="Create">Create New</a>
    </div>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ScheduledEvent[0].Subject)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ScheduledEvent[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ScheduledEvent[0].Location)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ScheduledEvent[0].Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ScheduledEvent[0].Start)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ScheduledEvent[0].End)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ScheduledEvent[0].IsFullDay)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ScheduledEvent)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Subject)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Location)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Image)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Start)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.End)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsFullDay)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

