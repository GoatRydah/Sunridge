@page
@model Sunridge.Pages.Admin.Owners.UpsertModel
@using Sunridge.Utility

@{
    ViewData["Title"] = "Upsert";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

@if (User.IsInRole(SD.AdminRole))
{
    <form method="post" asp-action="Upsert" enctype="multipart/form-data">

        <div class="col-8 pt-3 pl-3">
            @if (Model.OwnerObj.FirstName != null && Model.OwnerObj.FirstName != "")
            {
                <input type="hidden" asp-for="OwnerObj.Id" />
            }
            @if (Model.AddressObj.Id != 0)
            {
                <input type="hidden" asp-for="AddressObj.Id" />
            }

            <input type="hidden" asp-for="createAnother" id="another" />

            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="OwnerObj.FirstName"></label>
                </div>
                <div class="col-9">
                    <input class="form-control" asp-for="OwnerObj.FirstName" id="txtFirstName" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="OwnerObj.LastName"></label>
                </div>
                <div class="col-9">
                    <input class="form-control" asp-for="OwnerObj.LastName" id="textLastName" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="OwnerObj.Email"></label>
                </div>
                <div class="col-9">
                    <input class="form-control" asp-for="OwnerObj.Email" id="txtEmail" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="OwnerObj.PhoneNumber"></label>
                </div>
                <div class="col-9">
                    <input class="form-control" asp-for="OwnerObj.PhoneNumber" id="txtPhone" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="OwnerObj.Occupation"></label>
                </div>
                <div class="col-9">
                    <input class="form-control" asp-for="OwnerObj.Occupation" id="txtOccupation" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="OwnerObj.Birthday"></label>
                </div>
                <div class="col-9">
                    <input class="form-control" asp-for="OwnerObj.Birthday" id="txtBirthday" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="OwnerObj.EmergencyContactName"></label>
                </div>
                <div class="col-9">
                    <input class="form-control" asp-for="OwnerObj.EmergencyContactName" id="txtEmergencyContactName" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="OwnerObj.EmergencyContactPhone"></label>
                </div>
                <div class="col-9">
                    <input class="form-control" asp-for="OwnerObj.EmergencyContactPhone" id="txtEmergencyContactPhone" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="AddressObj.StreetAddress"></label>
                </div>
                <div class="col-9">
                    <input class="form-control" asp-for="AddressObj.StreetAddress" id="txtAddress" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="AddressObj.Apartment"></label>
                </div>
                <div class="col-9">
                    <input class="form-control" asp-for="AddressObj.Apartment" id="txtApartment" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="AddressObj.City"></label>
                </div>
                <div class="col-9">
                    <input class="form-control" asp-for="AddressObj.City" id="txtCity" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="AddressObj.State"></label>
                </div>
                <div class="col-9">
                    <input class="form-control" asp-for="AddressObj.State" id="txtState" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="AddressObj.Zip"></label>
                </div>
                <div class="col-9">
                    <input class="form-control" asp-for="AddressObj.Zip" id="txtZip" />
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-2">
                    @if (Model.OwnerObj.FirstName != null && Model.OwnerObj.FirstName != "")
                    {
                        <button type="submit" class="btn btn-primary form-control">Update</button>
                    }
                    else
                    {
                        <button type="submit" class="btn btn-primary form-control submission" onclick="return ValidateInput()">Create</button>
                    }
                </div>
                <div class="col-md-6">
                    <a asp-page="./Index" type="submit" class="btn btn-success form-control">Back to List</a>
                </div>
            </div>
            @if (Model.OwnerObj.FirstName == null || Model.OwnerObj.FirstName == "")
            {
                <p class="text-danger mt-3">Default Password will be assigned to this user: <span class="text-dark font-weight-bold">Temppass123$</span></p>
            }
        </div>
    </form>
}
else
{
    <h1>You must be logged in as an admin to view this page.</h1>
}

<script type="text/javascript" src="//ajax.googleapis.com/ajax/libs/jquery/2.0.0/jquery.min.js"></script>
<script>
    $(".submission").click(function () {
        var conf = confirm("Click okay to create another Owner after this one (clicking cancel still creates this owner)");
        if (conf == true) {
            $("#another").val(true);
        } else {
             $("#another").val(false);
        }
    });
</script>