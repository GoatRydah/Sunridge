@page
@model Sunridge.Pages.Admin.CommonAreaAssets.IndexModel
@using Sunridge.Utility
@{
    ViewData["Title"] = "Index";
}
@if (User.IsInRole(SD.AdminRole))
{
    <h2>Admin Common Area List</h2>

    <div class="row">
        <div class="col-lg-3 col-md-6">
            <a asp-page="/Admin/CommonAreaAssets/Upsert" class="btn btn-primary btn-sm">Add New Common Area</a>
        </div>
    </div>

    <div class="table-responsive-sm">
        <table id="DT_Load" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>Asset Name</th>
                    <th>Purchase Price</th>
                    <th>Description</th>
                    <th>Status</th>
                    <th>Date</th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>
}
    @section Scripts {
        <script src="~/js/adminCommonArea.js"></script>
    }

