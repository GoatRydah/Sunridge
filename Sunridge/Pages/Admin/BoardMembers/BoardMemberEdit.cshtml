@page
@using Sunridge.Utility
@if (User.IsInRole(SD.AdminRole))
{
    <div class="border backgroundWhite container mt-5 pt-3">
        <div class="row">
            <div class="col-6 mt-3">
                <h2 class="text-primary">Board Member List</h2>
            </div>
            <div class="col-6 text-right mt-3">
                <a asp-page="Upsert" class="btn btn-primary"><i class="fas fa-plus"></i>&nbsp;Create New</a>
            </div>
        </div>

        <br /><br />
        <table id="DT_load" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>Full Name</th>
                    <th>Role</th>
                    <th>Order</th>
                    <th></th>
                </tr>
            </thead>
        </table>
        <div class="row">
            <div class="col-12 text-right mt-4 mb-4">
                <a asp-page="/Home/BoardMembers" class="btn btn-success text-center float-right">Go to Board Members</a>
            </div>
        </div>
    </div>
}
else
{
    <div>
        <h1 class="danger">Access Denied</h1>
    </div>
}


@section Scripts{
    <script src="~/js/BoardMember.js"></script>
}