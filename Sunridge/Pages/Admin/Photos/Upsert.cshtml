@page
@model Sunridge.Pages.Admin.Photos.UpsertModel

@{
    ViewData["Title"] = "Upsert";
}
<br />
<br />
<table id="DT_load" class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr>
            <th>Category</th>
            <th>Title</th>
            <th>Name</th>
            <th>Year</th>
            <th>Image</th>
        </tr>
    </thead>
</table>
<form method="post" asp-action="Upsert" enctype="multipart/form-data">

    <div class="col-8 pt-3">
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="PhotosObj.Photo.Title"></label>
            </div>
            <div class="col-9">
                <input class="form-control" asp-for="PhotosObj.Photo.Title" id="txtTitle" style="height:200px"></input>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="PhotosObj.Photo.Year"></label>
            </div>
            <div class="col-9">
                <input class="form-control" asp-for="PhotosObj.Photo.Year" id="txtYear" style="height:200px"></input>
            </div>
        </div>

        <div class="row form-group">
            <div class="col-md-3">
                <label asp-for="PhotosObj.Photo.Category"></label>
            </div>
            <div class="col-md-9">
                @Html.DropDownListFor(m => m.PhotosObj.Photo.Category, Model.PhotosObj.Categories, "- Please select a Category", new { @class = "form-control" })
                <span class="text-danger" asp-validation-for="PhotosObj.Photo.Category"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-3">
                <label asp-for="PhotosObj.Photo.Image"></label>
            </div>
            <div class="col-9">
                <input type="file" class="form-control" name="files" id="files" />
            </div>
        </div>
        <div class="row">
            <div class="col-6">
                <button type="submit" class="btn btn-primary form-control" onclick="return ValidInput()">Create</button>
            </div>
            <div class="col-6">
                <a asp-page="./Index" type="submit" class="btn btn-success form-control">Back to List</a>
            </div>
        </div>
    </div>
</form>
@section Scripts{
    <script src="~/js/adminPhotoIndex.js"></script>
}

