@page
@model Sunridge.Pages.Admin.Photos.IndexModel
@using Sunridge.Utility;

@{
    ViewData["Title"] = "Photos Index";
}

@if (User.IsInRole(SD.AdminRole) || User.IsInRole(SD.OwnerRole))
{
    <div class="row pl-2">
        <div calss="col-md-3">
            <h2 class="pl-2 pt-2">Photo Gallery List</h2>
        </div>
        <div class="col-md-7"></div>
        <div class="col-md-2 pb-3 pt-2">
            <a asp-page="/Admin/Photos/Upsert" class="btn btn-primary">Add New Photo</a>
        </div>
    </div>

    <div class="pl-2">
        <table id="DT_Load" class="table table-striped table-bordered" style="width:100%; text-align:center;">
            <thead>
                <tr>
                    <th>Category</th>
                    <th>Title</th>
                    <th>Name</th>
                    <th>Year</th>
                    <th>Image</th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>

    @section Scripts {
        <script src="~/js/adminPhotoIndex.js"></script>
    }
}
else
{
    <h1>You must be logged in to view this page.</h1>
}