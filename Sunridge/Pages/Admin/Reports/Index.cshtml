@page
@model Sunridge.Pages.Admin.Reports.IndexModel
@using Sunridge.Utility
@{
    ViewData["Title"] = "Index";
}

@if (User.IsInRole(SD.AdminRole) || User.IsInRole(SD.OwnerRole))
{
    <div class="border  container mt-5 pt-3">
        <div class="row">
            <div class="col-6">
                <h2 class="text-primary">Report List</h2>
            </div>
            <div class="col-6 text-right">
                <a asp-page="Upsert" class="btn btn-primary"><i class="fas fa-plus"></i>&nbsp;Create New</a>

            </div>
        </div>
        <br /> <br />
        <table id="DT_load" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>User</th>
                    <th>Form Type</th>
                    <th>Description</th>
                    <th>Listing Date</th>
                    <th>Resolved Date</th>
                    <th></th>
                </tr>
            </thead>
        </table>


        <h2>Forms</h2>
        <a href="\images\Forms\SUNRIDGE_BUILDING_APPROVAL_REQUEST_FORM_rev2.pdf">Sunridge Building Approval Request Form</a>
        <br>
        <a href="\images\Forms\Sunridge-claim-form-fillable.pdf">Sunridge Claim Form</a>

        <div class="row">
            <div class="col-12 text-right mt-4 mb-4">
                <a asp-page="/Admin/Dashboard" class="btn btn-success text-center float-right">Back to Dashboard</a>
            </div>
        </div>
    </div>
}
else
{
    <div>
        <h1 class="danger">Access Denied</h1>
    </div>
}
@section Scripts{
    <script src="~/js/report.js"></script>
}
