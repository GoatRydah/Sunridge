@page
@model Sunridge.Pages.Admin.Keys.IndexModel
@using Sunridge.Utility
@if (User.IsInRole(SD.AdminRole))
{
    <div class="border backgroundWhite container mt-5 pt-3">
        <div class="row">
            <div class="col-6 mt-3">
                <h2 class="text-primary">Key List</h2>
            </div>
            <div class="col-6 text-right mt-3">
                <a asp-page="/Admin/Keys/Upsert" class="btn btn-primary"><i class="fas fa-plus"></i>&nbsp;Create New</a>
                <a asp-page="/Admin/Dashboard" class="btn btn-success text-center float-right ml-2">Back to Dashboard</a>
            </div>
        </div>

        <br /><br />
        <table id="DT_load" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>Serial Number</th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>
}
else if (User.IsInRole(SD.OwnerRole))
{

<div class="row">
    <div class="col-3"></div>
    <div class="col-6">
        <h3>My Keys:</h3>
    </div>
    <div class="col-3"></div>
</div>

<div class="row">
    <div class="col-3"></div>
    <div class="col-6">
        <table class="table-striped table-bordered col-12">

            @foreach (var lot in Model.userLots)
            {
                @foreach (var key in Model.KeyList)
                {
                    @if (key.LotId == lot.LotId)
                    {

                        <tr>
                            <td class="col-12">@key.Key.FullSerial</td>
                        </tr>

                    }
                }
            }
        </table>
    </div>
    <div class="col-3"></div>
    <div class="row">
        <div class="col-12">

        </div>
    </div>
</div>
    }
    else
    {
    <div>
        <h1 class="m-3">You must be logged in to view this page.</h1>
    </div>
    }

    @section Scripts{
        <script src="~/js/Key.js"></script>
    }
